--CLASSE--
class Mercado():
    def __init__(self, nome, cnpj, endereco, produtos = []):
        self.nome = nome
        self.cnpj = cnpj
        self.endereco = endereco
        self.produtos = produtos
      
    def comprar(self):
      listaAux = []
      for i in range(5):
        print("Produtos: ",self.produtos)
        escolha = int(input("escolha o a ser comprado: "))
        listaAux.append(self.produtos[escolha])
        del self.produtos[escolha]
        print("Carrinho de Compra: ",listaAux)
        

class Pessoa():
  def __init__(self, nome, idade, sexo, altura, cpf):
    self.nome = nome
    self.idade = idade
    self.sexo = sexo
    self.altura = altura
    self.__cpf = cpf

  @property
  def cpf(self):
    return self.cpf

  @cpf.setter
  def cpf(self, novo_cpf):
    raise ValueError("IMPOSSIVEL ALTERAR DIRETAMENTE")

class Cliente(Pessoa):
  def __init__(self, nome, idade, sexo, altura, cpf, nCartao):
    super().__init__(nome, idade, sexo, altura, cpf)
    self.nCartao = nCartao
